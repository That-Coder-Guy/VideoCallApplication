<local:NavigationPage x:Class="VideoCallApplication.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoCallApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage" Loaded="OnLoaded">

    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Join" FontSize="{DynamicResource HeaderFontSize}" Margin="0,0,0,10" FontFamily="{DynamicResource PrimaryFont}"/>
            <TextBox x:Name="uxAddressAndPort" TextWrapping="Wrap" Height="30" VerticalContentAlignment="Center" Margin="0,10,0,10" FontSize="{DynamicResource ButtonFontSize}" FontFamily="{DynamicResource PrimaryFont}"/>
            <Button x:Name="uxStart" Height="30" Padding="50,0,50,0" Click="OnStartClick" Margin="0,10,0,0" FontSize="14" FontFamily="{DynamicResource PrimaryFont}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Connect"/>
        </StackPanel>
    </Grid>
</local:NavigationPage>
