<local:NavigationPage x:Class="VideoCallApplication.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoCallApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid MouseLeftButtonUp="OnHostButtonClick">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Label Content="Start" Margin="0,10,0,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontSize="20"/>
            <Button x:Name="uxJoin" Content="Join" Margin="0,10,0,10" Click="OnJoinClick"/>
            <Button x:Name="uxHost" Content="Host" Margin="0,10,0,10" MouseLeftButtonUp="OnHostButtonClick" Click="OnHostButtonClick"/>
            <Button x:Name="uxTest" Margin="0,10,0,10" Content="Test" Click="uxTest_Click"/>
        </StackPanel>

    </Grid>
</local:NavigationPage>
