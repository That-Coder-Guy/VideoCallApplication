<local:NavigationPage x:Class="VideoCallApplication.HostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoCallApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HostPage" Closing="OnClosing">

    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="200" VerticalAlignment="Center">
            <Label Content="Host" Margin="0,0,0,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="{DynamicResource HeaderFontSize}" FontFamily="{DynamicResource PrimaryFont}"/>
            <TextBox x:Name="uxAddressAndPort" TextWrapping="Wrap" Height="30" VerticalContentAlignment="Center" IsReadOnly="True" Margin="0,10,0,10" FontSize="{DynamicResource ButtonFontSize}" FontFamily="{DynamicResource PrimaryFont}"/>
            <Button x:Name="uxStart" Content="Start" Height="30" Padding="50,1,50,1" Click="OnStartClick" Margin="0,10,0,0" FontFamily="{DynamicResource PrimaryFont}" FontSize="{DynamicResource ButtonFontSize}"/>
        </StackPanel>

    </Grid>
</local:NavigationPage>
